{
	"extends": "wikimedia",
	"env": {
		"es6": true,
		"browser": true,
		"jquery": true,
		"qunit": true
	},
	"globals": {
		"mediaWiki": false,
		"OO": false,
		"wikibase": false,
		"async": false
	},
	"parserOptions": {
		"ecmaVersion": 6
	},
	"rules": {
		"max-len": [ "warn", 100 ],
		"no-console": "off",
		"no-loop-func": "off"
	}
}
